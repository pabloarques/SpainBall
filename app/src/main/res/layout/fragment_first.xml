<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo4"
    tools:context=".FirstFragment">

    <Button
        android:id="@+id/btn_detalle"
        android:layout_width="110dp"
        android:layout_height="90dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="44dp"
        android:text="Detalles"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_objetos"
        android:layout_width="110dp"
        android:layout_height="90dp"
        android:layout_marginEnd="24dp"
        android:text="Objetos"
        app:layout_constraintBottom_toBottomOf="@+id/btn_detalle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_detalle" />

    <Button
        android:id="@+id/btn_historia"
        android:layout_width="110dp"
        android:layout_height="90dp"
        android:text="Historia"
        app:layout_constraintBottom_toBottomOf="@+id/btn_objetos"
        app:layout_constraintEnd_toStartOf="@+id/btn_objetos"
        app:layout_constraintStart_toEndOf="@+id/btn_detalle"
        app:layout_constraintTop_toTopOf="@+id/btn_objetos" />


</androidx.constraintlayout.widget.ConstraintLayout>